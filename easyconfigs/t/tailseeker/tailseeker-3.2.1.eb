easyblock = 'Conda'

name = 'tailseeker'
version = '3.2.1'

homepage = 'https://github.com/hyeshik/tailseeker'
description = """Tailseeker is the official pipeline for TAIL-seq, which measures poly(A) tail lengths and 3â€²-end modifications with Illumina SBS sequencers."""

toolchain = SYSTEM

dependencies = [('Miniconda3','4.10.3'),
	('tailseeker-db','20161205')
]

channels = ['defaults','bioconda', 'conda-forge']
requirements = 'changlabsnu::%(name)s=%(version)s'

