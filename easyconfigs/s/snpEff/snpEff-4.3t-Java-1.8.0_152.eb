easyblock = 'Tarball'

name = 'snpEff'
version = '4.3t'

homepage = 'http://sourceforge.net/projects/snpeff/'
description = """SnpEff is a variant annotation and effect prediction tool. 
 It annotates and predicts the effects of genetic variants (such as amino acid changes)."""

toolchain = SYSTEM

local_java = 'Java'
local_javaver = '1.8.0_152'
versionsuffix = '-%s-%s' % (local_java, local_javaver)

source_urls = [SOURCEFORGE_SOURCE]
sources = [('%s_v%s_core.zip' % (name, version.replace('.', '_')))]

dependencies = [(local_java, local_javaver)]


sanity_check_paths = {
    'files': [],
    'dirs': ['clinEff','snpEff']
}


modaliases = {'snpEff': 'local_java -jar %(installdir)s/snpEff/snpEff.jar',
	'SnpSift': 'local_java -jar %(installdir)s/snpEff/snpEff/SnpSift.jar',
	'clinEff': 'local_java -jar %(installdir)s/snpEff/clinEff/clinEff.jar'
}
modluafooter = "execute{cmd='shopt -s expand_aliases',modeA={'load'}}"
modloadmsg = """To execute snpEff run 'snpEff'.  This command executes 'local_java -jar %(installdir)s/snpEff/snpEff.jar'\n"""
modloadmsg += """To execute SnpSift run 'SnpSift'.  This command executes 'local_java -jar %(installdir)s/snpEff/SnpSift.jar'\n"""
modloadmsg += """To execute clinEff run 'clinEff'.  This command executes 'local_java -jar %(installdir)s/clinEff/ClinEff.jar'\n"""


moduleclass = 'bio'
