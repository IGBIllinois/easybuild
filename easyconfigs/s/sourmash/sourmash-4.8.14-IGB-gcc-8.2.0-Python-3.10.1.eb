easyblock = 'PythonPackage'

name = 'sourmash'
version = '4.8.14'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/sourmash-bio/sourmash'
description = """Quickly search, compare, and analyze genomic and metagenomic data sets."""

toolchain = {'name': 'IGB-gcc', 'version': '8.2.0'}

sources = ['sourmash-%(version)s-py3-none-manylinux_2_17_x86_64.manylinux2014_x86_64.whl']
source_urls = ['https://github.com/sourmash-bio/sourmash/releases/download/v%(version)s/']

dependencies = [
        ('Python', '3.10.1'),
]


exts_default_options = {
    'source_urls': [PYPI_SOURCE],
    'sanity_pip_check': True,
}

exts_defaultclass = "PythonPackage"
exts_list = [
	('bitstring','4.0.1'),
	('cachetools','5.2.0'),
	('cffi','1.15.1'),
	('deprecation','2.1.0'),
	('bz2file','0.98'),
	('matplotlib-venn','1.1.2'),
	('seaborn','0.13.2'),
	('sourmash-utils','0.2', {
		'source_tmpl': 'sourmash_utils-%(version)s.tar.gz'
	}),
	('UpSetPlot','0.9.0', {
		'modulename': 'upsetplot'
	}),
	('screed','1.1.3'),
	('sourmash_plugin_betterplot','0.4.5')
]

use_pip = True
sanity_pip_check = True
unpack_sources = False

exts_filter = ('python -c "import %(ext_name)s"', "")

sanity_check_paths = {
        'files': [],
        'dirs': ['lib/python%(pyshortver)s/site-packages/%(name)s'],
}

moduleclass = 'bio'
